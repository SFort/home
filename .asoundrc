pcm.dmixed {
        type asym
        playback.pcm {
                type dmix
                ipc_key 5678293
                ipc_perm 0660
                ipc_gid audio
                slave {
                        channels 2
                        pcm {
                                rate 44100
                                type hw
                                card 0 # your card
                        }
                        period_size 1024
                        buffer_size 8192
                }
                bindings {
                        0 0
                        1 1
                }
        }
        capture.pcm {
		type dsnoop
                ipc_key 5678294
		slave {
			pcm {
                                type hw
                                card 2 # your card
                        }
		}
	}
}

pcm.!default {
        type plug
        slave.pcm "dmixed"
}
